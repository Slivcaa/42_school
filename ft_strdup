#include "libft.h"

char *ft_strdup(const char *s1) {
    size_t len = 0;

    // Вычисляем длину строки
    while (s1[len] != '\0') {
        len++;
    }

    // Выделяем память для новой строки, включая завершающий нулевой символ
    char *dup = (char *)malloc((len + 1) * sizeof(char));
    if (dup == NULL) {
        return NULL; // Если память не выделена
    }

    // Копируем строку в новую память
    for (size_t i = 0; i <= len; i++) {
        dup[i] = s1[i];
    }

    return dup;
}
