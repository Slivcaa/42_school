#include "libft.h"

int	ft_ tolower(int i)
{
	if ('A' <= i && i <= 'Z')
		return (i + 32);
	return (i);
}

int main() {
    char test_chars[] = {'a', 'b', 'c', 'D', 'E', '1', '!', 'z'};
    int num_chars = sizeof(test_chars) / sizeof(test_chars[0]);

    for (int i = 0; i < num_chars; i++) {
        char original = test_chars[i];
        char lower = ft_tolower(original);
        printf("Original: %c, Lovercase: %c\n", original, lower);
    }

    return 0;
}
