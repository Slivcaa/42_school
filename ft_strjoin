#include "libft.h"

char *ft_strjoin(char const *s1, char const *s2) {
    if (s1 == NULL || s2 == NULL) {
        return NULL;
    }

    size_t len_s1 = strlen(s1);
    size_t len_s2 = strlen(s2);
    size_t total_len = len_s1 + len_s2;

    // Выделяем память для новой строки
    char *result = (char *)malloc(total_len + 1);
    if (result == NULL) {
        return NULL; // Проверка на случай неудачного выделения памяти
    }

    // Копируем s1 в новую строку
    memcpy(result, s1, len_s1);
    // Копируем s2 в новую строку
    memcpy(result + len_s1, s2, len_s2 + 1); // +1 для копирования завершающего нулевого символа

    return result;
}
