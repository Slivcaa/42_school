#include "libft.h"

void *ft_memchr(const void *s, int c, size_t n) {
    const unsigned char *ptr = (const unsigned char *)s;
    for (size_t i = 0; i < n; i++) {
        if (ptr[i] == (unsigned char)c) {
            return (void *)(ptr + i); // Вернет указатель на найденный символ
        }
    }
    return NULL; // Вернет NULL, если символ не найден
}

int main()
{
char data[] = "hello";
char *result = ft_memchr(data, 'e', 5); // Укажет на 'e' в "hello"
char *result2 = ft_memchr(data, 'a', 5); // Вернет NULL, т.к. 'a' не найдено
return(0);
}
