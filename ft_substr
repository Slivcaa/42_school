#include "libft.h"

char *ft_substr(char const *s, unsigned int start, size_t len) 
{
    char *substr;
    size_t i, str_len;

    if (s == NULL) {
        return NULL;
    }

    str_len = strlen(s);

    if (start >= str_len) {
        substr = (char *)malloc(1);
        if (substr == NULL) {
            return NULL;
        }
        substr[0] = '\0';
        return substr;
    }

    if (len > str_len - start) {
        len = str_len - start;
    }
    substr = (char *)malloc(len + 1);
    if (substr == NULL) {
        return NULL;
    }
    for (i = 0; i < len; i++) {
        substr[i] = s[start + i];
    }
    substr[len] = '\0';

    return substr;
}
