#include "libft.h"

char *ft_strnstr(const char *haystack, const char *needle, size_t len) {
    size_t needle_len = 0;
    while (needle[needle_len] != '\0') {
        needle_len++;
    }

    if (needle_len == 0) {
        return (char *)haystack; // Пустая подстрока всегда найдена
    }

    for (size_t i = 0; i <= len - needle_len && haystack[i] != '\0'; i++) {
        size_t j = 0;
        while (j < needle_len && haystack[i + j] == needle[j]) {
            j++;
        }
        if (j == needle_len) {
            return (char *)(haystack + i); // Возвращает указатель на начало подстроки
        }
    }
    return NULL; // Подстрока не найдена
}

int main()
{
char str[] = "hello world";
ft_strnstr(str, "world", 11); // Укажет на "world" в "hello world"
ft_strnstr(str, "world", 5); // Вернет NULL, т.к. "world" не входит в первые 5 символов
return(0);
}
